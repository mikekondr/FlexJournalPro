<Window x:Class="FlexJournalPro.TemplateManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ЖурналПро - Менеджер шаблонів" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="10,10,10,5" Padding="15">
            <StackPanel>
                <TextBlock Text="Менеджер шаблонів" Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                <TextBlock Text="Перегляд, імпорт та експорт шаблонів журналів" 
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Foreground="Gray"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Margin="10,5,10,5">
            <DataGrid x:Name="GridTemplates"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      ColumnHeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                      CellStyle="{StaticResource MaterialDesignDataGridCell}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="150"/>
                    <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Версія" Binding="{Binding Version}" Width="80"/>
                    <DataGridTextColumn Header="Створено" Binding="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                    <DataGridTextColumn Header="Оновлено" Binding="{Binding UpdatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" Margin="10,5,10,10" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="ОНОВИТИ" 
                            Click="BtnRefresh_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="0,0,5,0"/>

                    <Button Content="ДЕТАЛІ" 
                            Click="BtnViewDetails_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="5,0"/>

                    <Separator Style="{StaticResource MaterialDesignSeparator}" 
                               Width="1" 
                               Height="30" 
                               Margin="10,0"/>

                    <Button Content="ІМПОРТ JSON" 
                            Click="BtnImportJson_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="10,0,5,0"/>

                    <Button Content="ЕКСПОРТ JSON" 
                            Click="BtnExportJson_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="5,0"/>

                    <Separator Style="{StaticResource MaterialDesignSeparator}" 
                               Width="1" 
                               Height="30" 
                               Margin="10,0"/>

                    <Button Content="ВИДАЛИТИ" 
                            Click="BtnDelete_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="10,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="ЗАКРИТИ" 
                        Click="BtnClose_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>