<Window x:Class="FlexJournalPro.JournalEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:c="clr-namespace:FlexJournalPro.Controls"
        Title="ЖурналПро - Редактор" Height="600" Width="1200"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300" x:Name="ConstantsColumn"/>
        </Grid.ColumnDefinitions>

        <!-- DataGrid (зліва) -->
        <c:DynamicTableView x:Name="SmartTable" Grid.Column="0"/>

        <!-- Кнопка показу/приховування панелі -->
        <ToggleButton Grid.Column="1" 
                      x:Name="ToggleConstantsButton"
                      Width="30" 
                      Margin="5,0"
                      VerticalAlignment="Top"
                      ToolTip="Показати/сховати налаштування"
                      IsChecked="True"
                      Checked="ToggleConstantsButton_CheckedChanged"
                      Unchecked="ToggleConstantsButton_CheckedChanged"
                      Style="{StaticResource MaterialDesignFlatToggleButton}">
            <materialDesign:PackIcon Kind="Settings" Width="20" Height="20"/>
        </ToggleButton>

        <!-- Панель сеансових констант (справа) -->
        <materialDesign:Card Grid.Column="2" 
                             x:Name="ConstantsCard"
                             Padding="15" 
                             materialDesign:ElevationAssist.Elevation="Dp2" 
                             VerticalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Сеансові налаштування" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                               Margin="0,0,0,10"/>
                    <Separator Margin="0,0,0,15"/>

                    <StackPanel x:Name="ConstantsPanel" Orientation="Vertical"/>

                    <!-- Кнопка збереження -->
                    <Button Content="Зберегти налаштування" 
                            Click="BtnSaveConstants_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</Window>