<Window x:Class="FlexJournalPro.NewJournalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ЖурналПро - Новий журнал" Height="500" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Вибір шаблону -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Оберіть шаблон" Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="0,0,0,5"/>
            <ComboBox x:Name="ComboPresets"
                      materialDesign:HintAssist.Hint="Шаблон журналу"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      SelectionChanged="ComboPresets_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Версія: " FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="{Binding Version}" FontSize="11" Foreground="Gray"/>
                                <TextBlock Text=" • " FontSize="11" Foreground="Gray" Margin="5,0"/>
                                <TextBlock Text="ID: " FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="{Binding Id}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Налаштування журналу -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Налаштування журналу" Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="0,0,0,10"/>
            <TextBox x:Name="TxtTitle" 
                     materialDesign:HintAssist.Hint="Назва журналу" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,0,0,10"/>
            <TextBox x:Name="TxtStartNumber" 
                     materialDesign:HintAssist.Hint="Початковий номер" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Text="1"/>
        </StackPanel>

        <Separator Grid.Row="2" Margin="0,0,0,15"/>

        <!-- Параметри сеансу -->
        <GroupBox Header="Сеансові константи" Grid.Row="3" Margin="0,0,0,15"
                  Style="{StaticResource MaterialDesignCardGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PanelConstants" Margin="10">
                    <TextBlock Text="Оберіть шаблон для відображення констант" 
                               Foreground="Gray" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="20"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="СКАСУВАТИ" 
                    IsCancel="True" 
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    Margin="0,0,10,0"/>
            <Button Content="СТВОРИТИ" 
                    Click="BtnCreate_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>