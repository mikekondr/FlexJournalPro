<UserControl x:Class="FlexJournalPro.Views.Screens.JournalEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:FlexJournalPro.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" x:Name="ConstantsColumn"/>
        </Grid.ColumnDefinitions>

        <!-- Main table area -->
        <materialDesign:Card Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="8">
                    <ToggleButton x:Name="ToggleConstantsButton"
                                  Style="{StaticResource MaterialDesignActionToggleButton}"
                                  ToolTip="Сховати/показати константи"
                                  Checked="ToggleConstantsButton_CheckedChanged"
                                  Unchecked="ToggleConstantsButton_CheckedChanged">
                        <materialDesign:PackIcon Kind="Settings"/>
                    </ToggleButton>
                </StackPanel>

                <!-- Table with Floating Action Button -->
                <Grid Grid.Row="1">
                    <controls:DynamicTableView x:Name="SmartTable" 
                                               Margin="8,0,8,8"/>

                    <!-- Floating Action Button (FAB) -->
                    <Button x:Name="BtnAddRow"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            Click="BtnAddRow_Click"
                            ToolTip="Додати новий рядок"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,24,24">
                        <materialDesign:PackIcon Kind="PlaylistPlus" 
                                                 Width="32" 
                                                 Height="32"/>
                    </Button>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Constants panel -->
        <materialDesign:Card x:Name="ConstantsCard"
                             Grid.Column="1" 
                             Margin="8,0,0,0"
                             Width="300"
                             Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" 
                           Text="Константи" 
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="16"/>

                <!-- Constants form -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ConstantsPanel" 
                                Margin="16,0,16,16"/>
                </ScrollViewer>

                <!-- Save button -->
                <Button Grid.Row="2" 
                        Content="Зберегти константи"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="16"
                        Click="BtnSaveConstants_Click"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
