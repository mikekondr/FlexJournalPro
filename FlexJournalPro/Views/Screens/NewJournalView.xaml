<UserControl x:Class="FlexJournalPro.Views.Screens.NewJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="1" Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Шаблон журналу" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                   Margin="0,0,0,12"/>
                        <ComboBox ItemsSource="{Binding Templates}"
                                  SelectedItem="{Binding SelectedTemplate}"
                                  materialDesign:HintAssist.Hint="Оберіть шаблон..."
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,5">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="Версія: " FontSize="11" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Version}" FontSize="11" Foreground="Gray"/>
                                            <TextBlock Text=" | " FontSize="11" Foreground="Gray" Margin="5,0"/>
                                            <TextBlock Text="ID: " FontSize="11" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Id}" FontSize="11" Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Налаштування журналу" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                   Margin="0,0,0,12"/>
                        <TextBox Text="{Binding JournalTitle, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Назва" 
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="0,0,0,16"/>
                        <TextBox Text="{Binding StartNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Початковий номер" 
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>

                    <Separator Margin="0,0,0,20"/>

                    <StackPanel>
                        <TextBlock Text="Константи" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                   Margin="0,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding ConstantFields}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                             materialDesign:HintAssist.Hint="{Binding Label}" 
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             Margin="0,0,0,16"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Select a template to display constants" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"
                                   Margin="20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasConstants}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" Padding="16" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Скасувати" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Margin="0,0,16,0"/>
                <Button Content="Створити" 
                        Command="{Binding CreateJournalCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
