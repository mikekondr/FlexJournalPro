<UserControl x:Class="FlexJournalPro.Views.DialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:services="clr-namespace:FlexJournalPro.Services"
             MinWidth="400"
             MaxWidth="600">
    
    <materialDesign:Card Padding="0" UniformCornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="{DynamicResource MaterialDesign.Brush.Primary}"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="{Binding Icon}"
                                           Width="28"
                                           Height="28"
                                           Margin="0,0,16,0"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>

                    <TextBlock Grid.Column="1"
                             Text="{Binding Title}"
                             FontSize="20"
                             FontWeight="Medium"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="100"
                         MaxHeight="400"
                         Padding="24,24,24,16">
                <TextBlock Text="{Binding Message}"
                         TextWrapping="Wrap"
                         FontSize="14"
                         LineHeight="22"
                         VerticalAlignment="Center"
                         Padding="25 0"/>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{DynamicResource MaterialDesign.Brush.Background}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,1,0,0"
                    Padding="24,16">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">

                    <Button x:Name="BtnYes"
                           Content="Так"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Margin="0,0,8,0"
                           MinWidth="80"
                           Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                        <Button.CommandParameter>
                            <services:DialogResult>Yes</services:DialogResult>
                        </Button.CommandParameter>
                    </Button>

                    <Button x:Name="BtnNo"
                           Content="Ні"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Margin="0,0,8,0"
                           MinWidth="80"
                           Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                        <Button.CommandParameter>
                            <services:DialogResult>No</services:DialogResult>
                        </Button.CommandParameter>
                    </Button>

                    <Button x:Name="BtnOK"
                           Content="ОК"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Margin="0,0,8,0"
                           MinWidth="80"
                           IsDefault="True"
                           Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                        <Button.CommandParameter>
                            <services:DialogResult>OK</services:DialogResult>
                        </Button.CommandParameter>
                    </Button>

                    <Button x:Name="BtnCancel"
                           Content="Скасувати"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           MinWidth="80"
                           IsCancel="True"
                           Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                        <Button.CommandParameter>
                            <services:DialogResult>Cancel</services:DialogResult>
                        </Button.CommandParameter>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </materialDesign:Card>
</UserControl>
